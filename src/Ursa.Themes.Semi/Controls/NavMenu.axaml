            </Style>
            <Style Selector="^/template/ Border#PART_Border:pointerover">
                <Setter Property="Background" Value="{DynamicResource NavigationMenuItemPointeroverBackground}" />
            </Style>
        </Style>
        -->
    </ControlTheme>

</ResourceDictionary>
